<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.shouheng.layout">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".ModuleLayoutApp">
        <activity android:name=".view.LayoutMenuActivity"
            android:theme="@style/AppTheme.Branded">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.navigation.NavigationActivity" />
        <activity android:name=".view.tabbed.TabbedActivity" />
        <activity android:name=".view.scrolling.ScrollingActivity" />
        <activity android:name=".view.collapse.CollapseBarStructure" />
        <activity android:name=".view.bottomsheet.BottomSheetActivity"/>
        <activity
            android:name=".view.DrawerActivity"
            android:label="@string/title_activity_drawer"
            android:theme="@style/AppTheme"/>
        <activity android:name=".view.views.ViewSystemActivity"/>
        <activity android:name=".view.views.ViewAnimateActivity"/>
        <activity android:name=".view.support28.Support28Activity"/>
        <activity android:name=".view.support28.BottomAppBarActivity"/>
        <activity android:name=".view.swipe.SwipeBackDemoActivity"/>
        <activity android:name=".view.adapter.BeforeAdapter"/>
        <activity android:name=".view.ActivityEditLayout"/>
    </application>

</manifest>
